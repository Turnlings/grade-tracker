- if @uni_module.exams.present?
  .card-heading
    %h2 Assessments
    = link_to 'Add', new_uni_module_exam_path(@uni_module)
  %table.gt-table.mt-0
    %thead
      %tr
        %th Weight
        %th Name
        %th Score
        %th

    %tbody
      - @uni_module.exams.each do |exam|
        %tr.exam-row
          %td= exam.weight.to_s + '%'
          %td= exam.name
          %td= exam.score
          %td= link_to 'Edit', edit_uni_module_exam_path(@uni_module, exam)
