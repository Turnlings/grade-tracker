- if @uni_module.exams.present?
  %table
    %thead
      %tr
        %th Weight
        %th Name
        %th Score
        %th
        %th
        %th

    %tbody
      - @uni_module.exams.each do |exam|
        %tr
          %td= exam.weight
          %td= exam.name
          %td= exam.score
          %td= link_to 'Show', uni_module_exam_path(@uni_module, exam)
          %td= link_to 'Edit', edit_uni_module_exam_path(@uni_module, exam)
          %td= link_to 'Destroy', uni_module_exam_path(@uni_module, exam), method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'New exam', new_uni_module_exam_path(@uni_module)
