= form_for [@uni_module, @exam] do |f|
  - if @exam.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exam.errors.count, "error")} prohibited this exam from being saved:"
      %ul
        - @exam.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :score
    = f.text_field :score
  .actions
    = f.submit 'Save'
