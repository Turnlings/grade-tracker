.container
  %h1.section-heading Modules
  .row.mb-3
    .col
      -# Graph on left
      .gt-card{ style: "display: flex; flex-direction: column; height: 100%;" }
        %h2 Your Time Spent
        .chart-container
          = line_chart @module_data, curve: false, legend: false, width: "100%" #, height:"100%"

    
    .col
      -# Modules
      .gt-card.module-list.mb-3
        .d-flex.justify-content-between.align-items-center
          %h2 Current Modules
          = link_to "(View All)", uni_modules_path, style: "font-weight: normal;"
        - @uni_modules.each do |m|
          = link_to m do
            .row
              .col-3= m.code
              .col= m.name
              .col-3.text-end= "#{number_with_precision(m.weighted_average, precision: 0)}%"
            .row.progress-bar.px-12px
              .progress{style: "width: #{m.completion_percentage}%"}

      -# Quick-add time
      .gt-card.quicklog
        %h2 Quicklog
        = form_with model: @timelog, url: quick_log_path, local: true do |f|
          = f.label :module_code
          = f.text_field :module_code
          = f.label :minutes
          = f.number_field :minutes
          = f.submit 'Add Time'
  %h1.section-heading Assessments
  .row
    .col 
      .gt-card
        %h2 Upcoming Assessments
        = link_to @next_exam.name, uni_module_exam_path(@next_exam.uni_module, @next_exam)
        %span.d-block
          %b Due:
          = @next_exam.due.strftime("%d %b %Y, %H:%M")
    .col
      .gt-card
        %h2 Assessment Type
        .chart-container
          = pie_chart @exam_type_data, legend: false, width: "100%" #, height:"100%"