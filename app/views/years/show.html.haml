.page-heading
  .left-button.button-row
    .icon-button
      = link_to root_path do
        %i.fa-solid.fa-arrow-left
  %h1= @year.name
  .right-button.button-row
    .icon-button
      = link_to edit_year_path(@year) do
        %i.fa-solid.fa-pen-to-square

-# Stats
.stats-container 
  .stat 
    .stat-header Credits
    .stat-content= number_with_precision(@year.credits, precision: 0)
  .stat 
    .stat-header Average Score
    .stat-content= number_with_precision(@year.average_score(current_user), precision: 2) + '%'
  .stat 
    .stat-header Achieved Score
    .stat-content= number_with_precision(@year.achieved_score(current_user), precision: 2) + '%'

- @year.semesters.each do |semester|
  .gt-card
    .card-heading
      %h2= semester.name
      .icon-button
        = link_to semester_path(semester) do
          %i.fa-solid.fa-arrow-right
    .container-flex
      .row.font-secondary
        .col Progress
        .col Achieved
      .row
        .col.d-flex.align-items-center
          - progress = semester.progress(current_user)
          = "#{number_with_precision(progress, precision: 0)}%"
          - if progress == 100
            .chip-success.hide-on-mobile Completed
        .col= "#{number_with_precision(semester.achieved_score(current_user), precision: 0)}%"
      .row
        .col.progress-bar.mx-12px
          .progress{style: "width: #{semester.progress(current_user)}%"}
        .col.progress-bar.mx-12px
          .progress{style: "width: #{semester.achieved_score(current_user)}%"}

= link_to '+ New Semester', new_semester_path(year_id: @year.id), class: 'card-button section-margin'

-# Graph
.gt-card
  %h2 Your Time Spent
  .chart-container
    = line_chart @module_data, curve: false, legend: false, width: "100%" #, height:"100%"